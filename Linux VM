---
- name: Creating Resourcegroup
  hosts: localhost
  connection: local
  tasks:
   - name: Create resource group
     azure_rm_resourcegroup:
        name: azure-ansible-01
        location: eastus
        tags:
          environment: Dev
          Owner: Ashadeep
   - name: Create storage account
     azure_rm_storageaccount:
        resource_group: azure-ansible-01
        name: ashastorage15gb
        account_type: Standard_LRS      
   - name: Create virtual network
     azure_rm_virtualnetwork:
        resource_group: azure-ansible-01
        name: testvn001
        address_prefixes: "10.10.0.0/16"  
   - name: Add subnet
     azure_rm_subnet:
        resource_group: azure-ansible-01
        name: subnet001
        address_prefix: "10.10.0.0/24"
        virtual_network: testvn001  
   - name: Create public ip
     azure_rm_publicipaddress:
        resource_group: azure-ansible-01
        allocation_method: Static
        name: publicip001  
   - name: Create security group that allows SSH
     azure_rm_securitygroup:
        resource_group: azure-ansible-01
        name: secgroup001
        rules:
         - name: SSH
           protocol: Tcp
           destination_port_range: 22
           access: Allow
           priority: 101
           direction: Inbound    
   - name: Create NIC
     azure_rm_networkinterface:
      resource_group: azure-ansible-01
      name: testnic0012020
      virtual_network: testvn001
      subnet: subnet001
      public_ip_name: publicip001
      security_group: secgroup001      
   - name: Create virtual machine
     azure_rm_virtualmachine:
        resource_group: azure-ansible-01
        name: adp1232020
        vm_size: Standard_D1
        storage_account: ashastorage15gb
        storage_container: ashastorage15gb
        storage_blob: ashastorage15gb.vhd
        admin_username: aparida
        admin_password: Password@2020
        ssh_password_enabled: True
        network_interfaces: testnic0012020
        image:
          offer: CentOS
          publisher: OpenLogic
          sku: '7.1'
          version: latest  
